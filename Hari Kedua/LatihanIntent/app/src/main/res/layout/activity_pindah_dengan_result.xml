<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".PindahDenganResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih kota:"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnSukabumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sukabumi"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnBandung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bandung"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnCirebon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cirebon"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnTangerang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tangerang"/>

</LinearLayout>